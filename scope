# Import PowerShell Module
Import-Module -Name 'DHCPServer'

# Create VLAN10 DHCP Scope
Add-DhcpServerv4Scope -Name 'VLAN 10' -StartRange '192.168.10.1' -EndRange '192.168.10.253' -SubnetMask '255.255.255.0' -Description 'DHCP Pool for VLAN10'
Set-DhcpServerv4OptionValue -ScopeId '192.168.10.0' -DnsServer '192.168.30.1' -DnsDomain "lan_vlan10" -Router '192.168.10.254'

# Create VLAN20 DHCP Scope
